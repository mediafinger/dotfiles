[user]
  name = "Andreas Finger"
  email = "webmaster@mediafinger.com"
[alias]
  st = status
  co = checkout
  b = branch
  com = !git add . && git commit -am
  sync = !git pull --rebase && git push
  d = diff --staged
  unstage = reset HEAD
  resetcommit = reset --soft HEAD^
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
  default = current
[branch]
  autosetupmerge = true
[branch "master"]
  rebase = true
[merge]
  summary = true
  tool = [opendiff]
[gc]
  auto = 1    # automatic garbage collection to keep git fast
[giggle]
  main-window-maximized = false
  main-window-geometry = 1000x600+150+72
  history-view-vpane-position = 327
  file-view-vpane-position = 542
  main-window-view = HistoryView

