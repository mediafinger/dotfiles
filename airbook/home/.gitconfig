[user]
  name = "Andreas Finger"
  email = "webmaster@mediafinger.com"
[github]
  user = mediafinger
[alias]
  st = status
  co = checkout
  b = branch
  com = !git add . && git commit -am
  sync = !git pull --rebase && git push
  d = diff --staged
  unstage = !git reset HEAD && git checkout .
  untrack = clean -df
  resetcommit = reset --soft HEAD^
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
  default = current
[branch]
  autosetupmerge = true
  # autosetuprebase = true
[branch "master"]
  rebase = true
[merge]
  summary = true
  tool = opendiff
[core]
  # excludesfile = $HOME/.gitignore_global
  # whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[gc]
  auto = 1    # automatic garbage collection to keep git fast
